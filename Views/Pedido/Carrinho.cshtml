@{
    ViewData["Title"] = "Carrinho";
}

@model IList<ItemPedido>;

<h3>Meu Carrinho</h3>

<div class="panel panel-default">
    <div class="panel-heading">

        <div class="row">
            <div class="col-md-3">
                Item
            </div>
            <div class="col-md-3">
                Nome
            </div>
            <div class="col-md-2">
                Preço Unitário
            </div>
            <div class="col-md-2">
                Quantidade
            </div>
            <div class="col-md-1">
                    Subtotal
            </div>
        </div>
    </div>
    <div class="panel-body">

        @foreach (var item in Model)
        {
            <div class="row row-center linha-produto">
                <div class="col-md-3">
                    <img class="img-produto-carrinho" src="/images/produtos/imagem@(item.Produto.Codigo).jpg" />
                </div>
                <div class="col-md-3">@item.Produto.Nome</div>
                <div class="col-md-2 text-center">@item.Produto.Preco.ToString("C")</div>
                <div class="col-md-2 text-center">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button class="btn btn-default">
                                <span class="glyphicon-minus"></span>
                            </button>
                        </span>
                        <input type="text" value=@item.Quantidade
                               class="form-control text-center" />
                        <span class="input-group-btn">
                            <button class="btn btn-default">
                                <span class="glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-2">
                    <span class="pull-right" subtotal>
                        @((item.Quantidade * item.PrecoUnitario).ToString("C"))
                    </span>
                </div>
            </div>
        }
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-10">
                <span numero-itens>
                    Total: @Model.Count()
                    itens
                </span>
            </div>
            <div class="col-md-2">
                Total:  @(Model.Sum(i => i.Quantidade * i.PrecoUnitario).ToString("C"))<span class="pull-right" total>

                </span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <a class="btn btn-success"
               asp-action="carrossel">
                Adicionar Produtos
            </a>
            <a class="btn btn-success" asp-controller="pedido"
               asp-action="cadastro">
                Preencher Cadastro
            </a>
        </div>
    </div>
</div>
